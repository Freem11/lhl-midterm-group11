<!-- Modal -->
<div
class="modal fade"
id="newMapForm"
tabindex="-1"
role="dialog"
aria-labelledby="newMapFormTitle"
aria-hidden="true"
>
<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="newMapForm">Create Map</h5>
      <button
        type="button"
        class="close"
        data-dismiss="modal"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form  class="modal-form" action="/maps" method="POST">
        <div class="form-group">
          <label for="map_name">Map Name</label>
          <input
            type="text"
            name="map_name"
            class="form-control form-name"
            id="new-map-name"
            required
          />
        </div>
        <div class="form-group">
          <label for="map_description">Map Description</label>
          <input
            type="text"
            name="map_description"
            class="form-control form-desc"
            id="new-map-description"
            required
          />
          <small id="emailHelp" class="form-text text-muted"
            >Provide a description of this map for better
            identification</small
          >
        </div>
        <div class="button-div">
          <button
          type="submit"
          class="btn btn-primary modal-form-button"
        >
          Create Map
        </button>
        </div>

          </form>
        </div>

        </form>
        </div>

    </div>
  </div>
</div>
</div>
